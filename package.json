{
  "name": "InsuranceApp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "private": true,
  "scripts": {
    "start": "cds-serve",
    "watch-project1": "cds watch --open com.insurance.project1/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy InsuranceApp --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/connectivity": "^3.26.4",
    "@sap-cloud-sdk/http-client": "^3.26.4",
    "@sap-cloud-sdk/resilience": "^3.26.4",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "cds": {
    "requires": {
      "destination": true,
      "Northwind": {
        "kind": "odata-v2",
        "model": "srv/external/Northwind",
        "credentials": {
          "url": "https://services.odata.org/V2/Northwind/Northwind.svc"
        }
      }
    },
    "kind": "odata-v2",
    "html5-repo": true
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/project1"
  ]
}
